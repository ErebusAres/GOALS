<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Frame name="GoalsFrame" parent="UIParent" hidden="true" movable="true" enableMouse="true" clampedToScreen="true">
        <Size>
            <AbsDimension x="400" y="300" />
        </Size>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11" />
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32" />
            </TileSize>
            <EdgeSize>
                <AbsValue val="32" />
            </EdgeSize>
        </Backdrop>
        <TitleRegion>
            <Size>
                <AbsDimension x="100" y="32" />
            </Size>
            <Anchors>
                <Anchor point="TOP" />
            </Anchors>
        </TitleRegion>

        <!-- Tab Buttons -->
        <Frames>
            <Button name="GoalsMainTab" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30" />
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-10" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentText" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                            <Text>Main</Text>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnClick>
                        GoalsFrameMainContent:Show()
                        GoalsFrameLootHistory:Hide()
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="GoalsLootHistoryTab" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30" />
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" x="140" y="-10" />
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentText" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                            <Text>Loot History</Text>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnClick>
                        GoalsFrameMainContent:Hide()
                        GoalsFrameLootHistory:Show()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>

        <!-- Main Content Frame -->
        <Frames>
            <Frame name="GoalsFrameMainContent">
                <Size>
                    <AbsDimension x="400" y="250" />
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-40" />
                </Anchors>
                <ScrollFrame name="GoalsFrameScroll" inherits="UIPanelScrollFrameTemplate">
                    <Size>
                        <AbsDimension x="360" y="250" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-40" />
                    </Anchors>
                    <ScrollChild name="GoalsFrameScrollChild">
                        <FontString name="GoalsFrameScrollChildText" inherits="GameFontNormalSmall">
                            <Anchors>
                                <Anchor point="TOPLEFT" />
                            </Anchors>
                            <Text>Boss Kill Tracker:</Text>
                        </FontString>
                    </ScrollChild>
                </ScrollFrame>
            </Frame>

            <!-- Loot History Frame -->
            <Frame name="GoalsFrameLootHistory" hidden="true">
                <Size>
                    <AbsDimension x="400" y="250" />
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-40" />
                </Anchors>
                <ScrollFrame name="GoalsLootScroll" inherits="UIPanelScrollFrameTemplate">
                    <Size>
                        <AbsDimension x="360" y="250" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-40" />
                    </Anchors>
                    <ScrollChild name="GoalsLootScrollChild">
                        <FontString name="GoalsLootScrollChildText" inherits="GameFontNormalSmall">
                            <Anchors>
                                <Anchor point="TOPLEFT" />
                            </Anchors>
                            <Text>Loot History:</Text>
                        </FontString>
                    </ScrollChild>
                </ScrollFrame>
            </Frame>
        </Frames>

        <Scripts>
            <OnLoad>
                GoalsFrame:RegisterForDrag("LeftButton")
                GoalsFrame:SetScript("OnDragStart", GoalsFrame.StartMoving)
                GoalsFrame:SetScript("OnDragStop", GoalsFrame.StopMovingOrSizing)
                GoalsFrame:Show()
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>
